<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_club_player"
        android:layout_width="@dimen/dimen32"
        android:layout_height="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen16"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/font14"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen16"
        android:text="Marcus Rashford"
        android:layout_marginStart="@dimen/dimen16" />

    <TextView
        android:id="@+id/tv_goal_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/font14"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen80"
        android:text="70"
        android:layout_marginStart="@dimen/dimen80" />
    <TextView
        android:id="@+id/tv_text_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/font14"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen16"
        android:text="goals"
        android:layout_marginStart="@dimen/dimen16" />
</LinearLayout>