<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dimen32"
        android:layout_height="@dimen/dimen32"
        android:background="@drawable/ic_back"
        android:layout_marginLeft="@dimen/dimen24"
        android:layout_marginTop="@dimen/dimen40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen24" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Back"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font12"
        android:layout_marginTop="@dimen/dimen45"
        android:layout_marginLeft="@dimen/dimen4"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen4" />

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen24"
        android:fontFamily="@font/poppins_bold"
        android:text="Register your Account"
        android:textSize="@dimen/font20"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:layout_marginStart="@dimen/dimen24" />

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font13"
        android:layout_marginTop="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_title"
        android:layout_marginStart="@dimen/dimen24" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dimen275"
        android:layout_height="@dimen/dimen48"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_marginLeft="@dimen/dimen24"
        android:hint="ex. Fikri Adriansa"
        android:paddingLeft="@dimen/dimen14"
        android:paddingTop="@dimen/dimen14"
        android:paddingBottom="@dimen/dimen14"
        android:textSize="@dimen/font13"
        android:textColor="@color/colorWhitePale"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/edit_text_border_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_title"
        android:layout_marginStart="@dimen/dimen24"
        android:paddingStart="@dimen/dimen14"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_username_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Username"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font13"
        android:layout_marginTop="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:layout_marginStart="@dimen/dimen24" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="@dimen/dimen275"
        android:layout_height="@dimen/dimen48"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_marginLeft="@dimen/dimen24"
        android:hint="ex. @krayz21"
        android:paddingLeft="@dimen/dimen14"
        android:paddingTop="@dimen/dimen14"
        android:paddingBottom="@dimen/dimen14"
        android:background="@drawable/edit_text_border_background"
        android:textSize="@dimen/font13"
        android:textColor="@color/colorWhitePale"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_title"
        android:layout_marginStart="@dimen/dimen24"
        android:paddingStart="@dimen/dimen14"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font13"
        android:layout_marginTop="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        android:layout_marginStart="@dimen/dimen24" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="@dimen/dimen275"
        android:layout_height="@dimen/dimen48"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_marginLeft="@dimen/dimen24"
        android:hint="ex. user@gmail.com"
        android:paddingLeft="@dimen/dimen14"
        android:paddingTop="@dimen/dimen14"
        android:paddingBottom="@dimen/dimen14"
        android:background="@drawable/edit_text_border_background"
        android:textSize="@dimen/font13"
        android:textColor="@color/colorWhitePale"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_title"
        android:layout_marginStart="@dimen/dimen24"
        android:paddingStart="@dimen/dimen14"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Password"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font13"
        android:layout_marginTop="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginStart="@dimen/dimen24" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="@dimen/dimen275"
        android:layout_height="@dimen/dimen48"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_marginLeft="@dimen/dimen24"
        android:hint="********"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dimen14"
        android:paddingTop="@dimen/dimen14"
        android:paddingBottom="@dimen/dimen14"
        android:background="@drawable/edit_text_border_background"
        android:textSize="@dimen/font13"
        android:textColor="@color/colorWhitePale"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_title"
        android:layout_marginStart="@dimen/dimen24"
        android:paddingStart="@dimen/dimen14"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="@dimen/dimen312"
        android:layout_height="@dimen/dimen48"
        android:layout_marginLeft="@dimen/dimen24"
        android:layout_marginTop="@dimen/dimen40"
        android:layout_marginRight="@dimen/dimen24"
        android:layout_marginBottom="@dimen/dimen78"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/poppins_bold"
        android:text="Continue"
        android:textColor="@color/colorWhitePale"
        android:textSize="@dimen/font16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

</androidx.constraintlayout.widget.ConstraintLayout>