<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_date_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen2"
        android:layout_marginLeft="@dimen/dimen12"
        android:layout_marginTop="@dimen/dimen12"
        app:cardCornerRadius="@dimen/dimen8"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginStart="@dimen/dimen12">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:text="4 July 2020"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/font12"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen8" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_marginTop="@dimen/dimen8">

        <TextView
            android:id="@+id/tv_home_team"
            android:layout_width="@dimen/dimen64"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="MUN"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font14" />

        <ImageView
            android:id="@+id/iv_home_club"
            android:layout_marginLeft="@dimen/dimen12"
            android:layout_toRightOf="@id/tv_home_team"
            android:layout_width="@dimen/dimen24"
            android:layout_height="@dimen/dimen24"
            android:layout_marginStart="@dimen/dimen12"
            android:layout_toEndOf="@id/tv_home_team" />

        <TextView
            android:id="@+id/tv_score_home_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_home_club"
            android:layout_marginLeft="@dimen/dimen16"
            android:text="2"
            android:textSize="@dimen/font16"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/dimen16"
            android:layout_toEndOf="@id/iv_home_club" />

        <TextView
            android:id="@+id/tv_strip_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_score_home_team"
            android:layout_marginLeft="@dimen/dimen2"
            android:text="-"
            android:textSize="@dimen/font16"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/dimen2"
            android:layout_toEndOf="@id/tv_score_home_team" />

        <TextView
            android:id="@+id/tv_score_away_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_strip_separator"
            android:layout_marginLeft="@dimen/dimen2"
            android:text="0"
            android:textSize="@dimen/font16"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/dimen2"
            android:layout_toEndOf="@id/tv_strip_separator" />

        <ImageView
            android:id="@+id/iv_away_club"
            android:layout_marginLeft="@dimen/dimen16"
            android:layout_toRightOf="@id/tv_score_away_team"
            android:layout_width="@dimen/dimen24"
            android:layout_height="@dimen/dimen24"
            android:layout_marginStart="@dimen/dimen16"
            android:layout_toEndOf="@id/tv_score_away_team" />

        <TextView
            android:id="@+id/tv_away_team"
            android:layout_width="@dimen/dimen64"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen12"
            android:layout_marginLeft="@dimen/dimen12"
            android:layout_toEndOf="@id/iv_away_club"
            android:layout_toRightOf="@id/iv_away_club"
            android:fontFamily="@font/poppins_regular"
            android:text="MCI"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font14" />
    </RelativeLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>