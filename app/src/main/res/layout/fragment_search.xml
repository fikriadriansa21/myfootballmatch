<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.SearchFragment"
    android:layout_margin="@dimen/dimen16">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="123dp"
        android:src="@drawable/bubble_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Search"
        android:layout_marginTop="@dimen/dimen32"
        android:layout_marginLeft="@dimen/dimen24"
        android:padding="@dimen/dimen4"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen24" />

    <EditText
        android:id="@+id/et_search_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:layout_marginLeft="@dimen/dimen24"
        android:layout_marginTop="@dimen/dimen24"
        android:layout_marginRight="@dimen/dimen24"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGray"
        android:hint="@string/find_other_team_search"
        android:paddingTop="@dimen/dimen12"
        android:paddingBottom="@dimen/dimen12"
        android:paddingEnd="@dimen/dimen12"
        android:background="@drawable/edit_text_border_background"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/font14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_title"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:paddingLeft="@dimen/dimen12"
        android:paddingRight="@dimen/dimen12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen24"
        android:layout_marginRight="@dimen/dimen24"
        android:layout_marginLeft="@dimen/dimen24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_team" />


</androidx.constraintlayout.widget.ConstraintLayout>