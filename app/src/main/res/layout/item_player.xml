<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen8"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_jersey"
        android:layout_width="@dimen/dimen32"
        android:layout_height="@dimen/dimen32"
        android:src="@drawable/jersey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_player_name_squad"
        android:layout_width="@dimen/dimen142"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen16"
        android:fontFamily="@font/poppins_regular"
        android:text="Marcus Rashford"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_jersey"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_position_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="LW"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font16"
        android:layout_marginRight="@dimen/dimen16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dimen16" />

</androidx.constraintlayout.widget.ConstraintLayout>